<h1>Directors database</h1>
<a href="directors/new">Add a new director</a>
<p><a href="/">Back to main page</a></p>

<div class="container">
    <div class="row">
        <div class="col-md-3"><h4>Director</h4></div>
        <div class="col-md-8"><h4>Bio</h4></div>
        <div class="col-md-1"><h4>URL</h4></div>
    </div>
    <% @output.each do |x| %>
        <div class="row">
            <div class="col-md-1"><img src="<%=x.image_url%>" width="80"></div>
            <div class="col-md-2">
                <%=x.name%>
                <%=x.dob%>
                <a href="/directors/<%=x.id%>">Show details</a>
                <a href="directors/<%=x.id%>/delete">Delete</a>
            </div>
            <div class="col-md-8"><%=x.bio%></div>
            <div class="col-md-1"><%=x.image_url%></div>
        </div>
    <hr>
    <% end %>
</div>
    
